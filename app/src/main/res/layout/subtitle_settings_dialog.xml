<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/darker_gray">

    <LinearLayout
        android:id="@+id/linear_second_dialog_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="#696969"
        android:layout_marginBottom="1dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@android:color/white" />

        <TextView
            android:id="@+id/second_dialog_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_weight="1"
            android:text="Subtitles Settings"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:layout_marginBottom="1dp"
        android:background="#696969">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="2dp"
            android:text="User"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/enter_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:padding="2dp"
            android:text="Enter User Name"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="#696969">

        <TextView
            android:id="@+id/second_dialog_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="2dp"
            android:text="Size"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/subs_size_1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/border_style"
            android:src="@drawable/ic_text_first" />

        <ImageView
            android:id="@+id/subs_size_2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/border_style"
            android:src="@drawable/ic_text_second" />

        <ImageView
            android:id="@+id/subs_size_3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/border_style"
            android:src="@drawable/ic_text_third" />

        <ImageView
            android:id="@+id/subs_size_4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/border_style"
            android:src="@drawable/ic_text_four" />

        <ImageView
            android:id="@+id/subs_size_5"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/border_style"
            android:src="@drawable/ic_text_five" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_format"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="#696969"
        android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/second_dialog_format"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="#696969"
            android:padding="2dp"
            android:text="Format"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/format_black"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/border_style"
            android:src="@drawable/ic_text_black_bg" />

        <ImageView
            android:id="@+id/format_light_grey"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/border_style"
            android:src="@drawable/ic_text_white_no_bg" />

        <ImageView
            android:id="@+id/format_transparent"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/border_style"
            android:src="@drawable/ic_text_yellow" />

        <ImageView
            android:id="@+id/format_white"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/border_style"
            android:src="@drawable/ic_text_black_no_bg" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/subtitle_settings_dialog_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/subtitle_settings_dialog_btnUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="1dp"
            android:background="#696969"
            android:text="Enter User Name"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/subtitle_settings_dialog_btnOk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#696969"
            android:text="OK"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#696969"
        android:gravity="center_horizontal"
        android:layout_marginTop="1dp">

        <TextView
            android:id="@+id/sample_subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack"
            android:padding="2dp"
            android:text="This is a sample Subtitle text"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>